@model AvansFestivals.Domain.Database.Festival

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Weet je zeker dat je de volgende gegevens wilt verwijderen?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           @Resource.Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
           @Resource.Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Resource.StartDate
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Start)
        </dd>

        <dt>
           @Resource.EndDate
        </dt>

        <dd>
            @Html.DisplayFor(model => model.End)
        </dd>

        <dt>
            @Resource.Logo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Logo)
        </dd>

        <dt>
           @Resource.Banner
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Banner)
        </dd>

        <dt>
            @Resource.Status
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FestivalState)
        </dd>
        <dt>
            @Resource.Ticket
        </dt>
        <dd>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>@Resource.TicketKind<th>
                        <th>@Resource.Price</th>
                        <th>@Resource.Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model.TicketAmounts)
                    {
                        <tr>
                            <td>@e.TicketType.ToString()</td>
                            <td>€ @e.Price.ToString()</td>
                            <td>@e.Amount.ToString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="@Resource.Delete" class="btn btn-default" /> |
            @Html.ActionLink("Terug naar lijst", "Index")
        </div>
    }
</div>
