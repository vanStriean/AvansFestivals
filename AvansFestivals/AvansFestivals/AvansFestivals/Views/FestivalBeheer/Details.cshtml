@model AvansFestivals.Domain.Database.Festival

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
    <hr />
<div class="clearfix">
    <dl class="dl-horizontal">
        <dt>
            @Resource.Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Resource.Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Resource.StartDate
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Start)
        </dd>

        <dt>
            @Resource.EndDate
        </dt>

        <dd>
            @Html.DisplayFor(model => model.End)
        </dd>

        <dt>
            @Resource.Logo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Logo)
        </dd>

        <dt>
            @Resource.Banner
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Banner)
        </dd>

        <dt>
            @Resource.Status
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FestivalState)
        </dd>
        <dt>
            @Resource.Tickets
        </dt>
        <dd>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>@Resource.TicketType</th>
                        <th>@Resource.Price</th>
                        <th>@Resource.Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model.TicketAmounts)
                    {
                        <tr>
                            <td>@e.TicketType.ToString()</td>
                            <td>€ @e.Price.ToString()</td>
                            <td>@e.Amount.ToString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
    <a href="@Url.Action("Index", "FestivalBeheer")" class="btn btn-sm btn-primary pull-left"><span class="glyphicon glyphicon-chevron-left"></span>@Resource.ReturnToList</a>
    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-sm btn-primary pull-right">@Resource.Edit<span class="glyphicon glyphicon-pencil"></span></a>
</div>