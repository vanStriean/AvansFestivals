@model AvansFestivals.Domain.Database.Comment
@using (Html.BeginForm("Index","Festival"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.FestivalId)
    <dl>
        <dt>@Resource.WriteComment</dt>
        <dd>
            <div class="input-group">
                @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control message" } })
                <span class="input-group-btn">
                    <input type="submit" value="@Resource.WriteComment" class="btn btn-default" />
                </span>
            </div>
            @if (ViewBag.Message != null)
            {
                <span class="text-danger field-validation-error" data-valmsg-replace="true" data-valmsg-for="Message">
                    <span class="" for="Message">ViewBag.Message</span>
                </span>
            }
        </dd>
    </dl>
}