@using AvansFestivals.Models;
@model LoginModel
<section id="loginForm">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <h2>@ViewBag.Title</h2>
        <hr />
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="Username" class="col-md-2 control-label">@Resource.Username</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label for="Password" class="col-md-2 control-label">@Resource.Password</label>
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Resource.Login" class="btn btn-primary" />
            </div>
        </div>
        <p>
            @Html.ActionLink(@Resource.RegisterNewUser, "Register")
        </p>
    }
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}