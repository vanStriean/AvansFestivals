@model  AvansFestivals.Models.FestivalListModel

@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-12">
        <div id="slides">
            @foreach (var e in Model.RandomFestivals)
            {
                <a href="@Url.Action("Index", "Festival", new { id = e.Id })"><img class="img-responsive" src="@e.Banner"></a>
            }
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <h2>@Html.Localize("upcomingEvents")</h2>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>@Html.Localize("event")</th>
                        <th>@Html.Localize("date")</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model.Festivals) { 
                    <tr>
                        <td>@e.Name</td>
                        <td>@Html.Localize("from") <span class="label label-primary">@e.Start.ToShortDateString()</span> @Html.Localize("until") <span class="label label-primary">@e.End.ToShortDateString()</span></td>
                        <td>
                            <a href="@Url.Action("Index", "Festival", new { id = e.Id })" class="btn btn-primary btn-sm">@Html.Localize("checkout")<span class="glyphicon glyphicon-search"></span></a>
                            @if (Session["User"] != null)
                            {
                                <a href="@Url.Action("Tickets", "Festival", new { id = e.Id })" class="btn btn-primary btn-sm">@Html.Localize("tickets")<span class="glyphicon glyphicon-tags"></span></a>
                            }
                        </td>    
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('#slides').slidesjs({
            width: 940,
            height: 450,
            navigation: false,
            play: {
                active: false,
                effect: "slide",
                interval: 5000,
                auto: true,
                swap: true,
                pauseOnHover: true,
                restartDelay: 2500
            },
            pagination: {
                active: false,
                effect: "slide"
            }
        });
    });
</script>
