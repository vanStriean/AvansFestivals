@using AvansFestivals.Domain.Database;
@{
    ViewBag.User = (User)Session["User"];
}

@if (Session["User"] == null) 
{ 
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Registreer", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Inloggen", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">@ViewBag.User.Firstname @ViewBag.User.Lastname <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
                <li>@Html.ActionLink("Uitloggen", "Logout", "Account", routeValues: null, htmlAttributes: new { id = "logoutLink" })</li>
            </ul>
        </li>
    </ul>
}
